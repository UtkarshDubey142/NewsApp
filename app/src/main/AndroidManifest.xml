<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.utkarsh.newsapp">
    <!-- permissions for INTERNET -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_for_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_for_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsApp">
        <activity android:name=".SavedArticlesActivity"></activity>
        <activity android:name=".UserInfoActivity"></activity>
        <activity android:name=".NewsDetailActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>